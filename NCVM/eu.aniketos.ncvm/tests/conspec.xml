<?xml version="1.0" encoding="UTF-8"?>
<specification id="Confidentiality"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="xsd_aniketos.xsd">
	<maxint>32000</maxint>
	<maxlen>1000</maxlen>
	<scope>session</scope>
	<securitystate>
		<declaration>
			<type>string</type>
			<identifier>inputSuite</identifier>
			<value>
				<sconst>Basic128Sha256Rsa15</sconst>
			</value>
		</declaration>
		<declaration>
			<type>string</type>
			<identifier>inputSchema</identifier>
			<value>
				<sconst>symmetric</sconst>
			</value>
		</declaration>
		<declaration>
			<type>string</type>
			<identifier>inputAlgorithm</identifier>
			<value>
				<sconst>AES</sconst>
			</value>
		</declaration>
		<declaration>
			<type>int</type>
			<identifier>inputKeyLength</identifier>
			<value>
				<iconst>128</iconst>
			</value>
		</declaration>
		<declaration>
			<type>string</type>
			<identifier>outputSuite</identifier>
			<value>
				<sconst>Basic128Sha256Rsa15</sconst>
			</value>
		</declaration>
		<declaration>
			<type>string</type>
			<identifier>outputSchema</identifier>
			<value>
				<sconst>symmetric</sconst>
			</value>
		</declaration>
		<declaration>
			<type>string</type>
			<identifier>outputAlgorithm</identifier>
			<value>
				<sconst>AES</sconst>
			</value>
		</declaration>
		<declaration>
			<type>int</type>
			<identifier>outputKeyLength</identifier>
			<value>
				<iconst>128</iconst>
			</value>
		</declaration>
	</securitystate>
	<rule>
		<before>
			<identifier>process.start</identifier>
			<parameter>
				<type>string</type>
				<identifier>id</identifier>
			</parameter>
			<parameter>
				<type>string</type>
				<identifier>type</identifier>
			</parameter>
			<parameter>
				<type>int</type>
				<identifier>time</identifier>
			</parameter>
			<parameter>
				<type>int</type>
				<identifier>date</identifier>
			</parameter>
			<parameter>
				<type>string</type>
				<identifier>exec</identifier>
			</parameter>
			<parameter>
				<type>string</type>
				<identifier>Output</identifier>
			</parameter>
		</before>
		<perform>
			<reaction>
				<guard>
					<invocation>
						<b_identifier>ProtectOutput</b_identifier>
						<b_identifier>result</b_identifier>
						<argument>
							<i_identifier>outputKeyLength</i_identifier>
						</argument>
						<argument>
							<s_identifier>outputAlgorithm</s_identifier>
						</argument>
						<argument>
							<s_identifier>outputSchema</s_identifier>
						</argument>
						<argument>
							<s_identifier>outputSuite</s_identifier>
						</argument>
						<argument>
							<i_identifier>inputKeyLength</i_identifier>
						</argument>
						<argument>
							<s_identifier>inputAlgorithm</s_identifier>
						</argument>
						<argument>
							<s_identifier>inputSchema</s_identifier>
						</argument>
						<argument>
							<s_identifier>inputSuite</s_identifier>
						</argument>
						<argument>
							<s_identifier>id</s_identifier>
						</argument>
					</invocation>
				</guard>
				<update />
			</reaction>
		</perform>
	</rule>
</specification>
