   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.activiti.designer.preferences.ActivitiPreferencePage"
            id="org.activiti.designer.preferences"
            name="Activiti">
      </page>
      <page
            category="org.activiti.designer.preferences"
            class="org.activiti.designer.preferences.ActivitiEditorPreferencesPage"
            id="org.activiti.designer.gui.editorpage"
            name="Editor">
      </page>
      <page
            category="org.activiti.designer.preferences"
            class="org.activiti.designer.preferences.ActivitiSavePreferencesPage"
            id="org.activiti.designer.gui.savepage"
            name="Save">
      </page>
      <page
            category="org.activiti.designer.preferences"
            class="org.activiti.designer.preferences.ActivitiImportPreferencesPage"
            id="org.activiti.designer.gui.preferences.Import"
            name="Import">
      </page>
      <page
            category="org.activiti.designer.preferences"
            class="org.activiti.designer.preferences.AlfrescoPreferencesPage"
            id="org.activiti.designer.gui.preferences.alfresco"
            name="Alfresco settings">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.activiti.designer.gui.unitTestContribution"
            nameFilter="*.bpmn20.xml"
            objectClass="org.eclipse.core.resources.IFile">
         <menu
               id="org.activiti.designer.gui.menu1"
               label="Activiti"
               path="additions">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               class="org.activiti.designer.actions.GenerateUnitTestAction"
               id="org.activiti.designer.gui.generateUnitTestAction"
               label="Generate unit test"
               menubarPath="org.activiti.designer.gui.menu1/group1">
         </action>
      </objectContribution>
   </extension>
   <extension point="org.eclipse.ui.commands">
   	<command
    	id="org.activiti.designer.gui.actions.copyCommand"
        name="Copy Diagram Element(s)" />
    <command
    	id="org.activiti.designer.gui.actions.pasteCommand"
        name="Paste Diagram Element(s)" />
   	
</extension>
<extension point="org.eclipse.ui.handlers">
  <handler
        class="org.activiti.designer.gui.actions.CopyActionHandler"
        commandId="org.activiti.designer.gui.actions.copyCommand">
     <activeWhen>
        <with variable="activePartId">
           <equals value="org.activiti.designer.bpmneditor"/>
           </with>
     </activeWhen>
  </handler>
   <handler
        class="org.activiti.designer.gui.actions.PasteActionHandler"
        commandId="org.activiti.designer.gui.actions.pasteCommand">
     <activeWhen>
        <with variable="activePartId">
           <equals value="org.activiti.designer.bpmneditor"/>
           </with>
     </activeWhen>
  </handler>
</extension>
<extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:edit">
         <command
               commandId="org.activiti.designer.gui.actions.copyCommand"
               label="Copy diagram item(s)"
               style="push">
               <visibleWhen
                     checkEnabled="false">
                     <with variable="activePartId">
           				<equals value="org.activiti.designer.bpmneditor"/>
           		     </with>
               </visibleWhen>
         </command>
         <command
               commandId="org.activiti.designer.gui.actions.pasteCommand"
               label="Paste diagram item(s)"
               style="push">
               <visibleWhen
                     checkEnabled="false">
                     <with variable="activePartId">
           				<equals value="org.activiti.designer.bpmneditor"/>
           		     </with>
               </visibleWhen>
         </command>
      </menuContribution>
   </extension>
<extension point="org.eclipse.ui.bindings">
  <key
        commandId="org.activiti.designer.gui.actions.copyCommand"
        schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
        sequence="Ctrl+C">
  </key>
  <key
        commandId="org.activiti.designer.gui.actions.pasteCommand"
        schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
        sequence="Ctrl+V">
  </key>
</extension>
<extension
      point="org.eclipse.ui.popupMenus">
   <objectContribution
         adaptable="false"
         id="org.activiti.designer.gui.import"
         objectClass="org.eclipse.jdt.core.IJavaProject">
      <action
            class="org.activiti.designer.popupmenus.ImportBpmnMenu"
            icon="icons/type.service.png"
            id="org.activiti.designer.gui.importAction"
            label="Import BPMN 2.0 file"
            menubarPath="Properties">
      </action>
   </objectContribution>
   <objectContribution
         adaptable="false"
         id="org.activiti.designer.gui.deployment"
         objectClass="org.eclipse.jdt.core.IJavaProject">
      <action
            class="org.activiti.designer.popupmenus.DeploymentMenu"
            icon="icons/type.send.png"
            id="org.activiti.designer.gui.deploymentAction"
            label="Create deployment artifacts"
            menubarPath="Properties">
      </action>
   </objectContribution>
</extension>

</plugin>
